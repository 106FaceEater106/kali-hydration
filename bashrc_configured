# ~/.bashrc: executed by bash(1) for non-login shells.

# Note: PS1 and umask are already set in /etc/profile. You should not
# need this unless you want different defaults for root.
# PS1='${debian_chroot:+($debian_chroot)}\\h:\\w\\$ '
PS1='${debian_chroot:+($debian_chroot)}\[\033[01;36m\]\u\[\033[01;37m\]@\[\033[01;32m\]\h\[\033[01;37m>
# umask 022


# You may uncomment the following lines if you want `ls' to be colorized:
 export LS_OPTIONS='--color=auto'
# eval "`dircolors`"
 alias ls='ls $LS_OPTIONS'
 alias ll='ls $LS_OPTIONS -l'
 alias l='ls $LS_OPTIONS -lA'
#
# Some more alias to avoid making mistakes:
# alias rm='rm -i'
# alias cp='cp -i'
# alias mv='mv -i'
alias jarvis='apt-get update && apt-get upgrade -y'
alias nmapAutomator='/usr/bin/HackRepo/nmapAutomator/./nmapAutomator.sh'
alias nessus-start='/etc/init.d/nessusd start'
alias nessus-stop='/etc/init.d/nessusd stop'
alias nessus-update='/opt/nessus/sbin/nessuscli update --all'
alias badchars='cat /usr/bin/HackRepo/badchars.txt'

